<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_IdComputador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/recurso_id"
        android:textSize="@dimen/recurso_id"
        android:text="TextView" />

    <TextView
        android:id="@+id/textview_DescripcionComputador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/recurso_descripcion"
        android:textSize="@dimen/recurso_descripcion"
        android:text="TextView" />

    <TextView
        android:id="@+id/textview_UbicacionComputador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/recurso_descripcion"
        android:textSize="@dimen/recurso_descripcion"
        android:text="TextView" />


</LinearLayout>