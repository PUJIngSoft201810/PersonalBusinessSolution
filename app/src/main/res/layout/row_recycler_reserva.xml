<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="117dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            app:srcCompat="@drawable/ic_assignment_black_24dp" />

        <TextView
            android:id="@+id/textview_Estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_Recurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recurso"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_IdRecurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion"
            android:textStyle="italic"
            tools:text="IdRecurso" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_FechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha Inicio"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion" />

            <TextView
                android:id="@+id/textview_FechaFin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha Final"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_IdReserva"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/recurso_id"
        android:textSize="@dimen/recurso_id"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textview_IdUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/recurso_descripcion"
        android:textSize="@dimen/recurso_descripcion"
        android:visibility="invisible" />


</LinearLayout>