<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:srcCompat="@drawable/ic_book_black_24dp" />

        <TextView
            android:id="@+id/textview_IsbnLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isbn"
            android:textAlignment="center"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_TituloLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_AutorLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_UbicacionLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion" />

        <TextView
            android:id="@+id/textview_DescripcionLibro"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Descripcion"
            android:textColor="@color/recurso_descripcion"
            android:textSize="@dimen/recurso_descripcion" />

        <TextView
            android:id="@+id/textview_IdLibro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="TextView"
            android:textColor="@color/recurso_id"
            android:textSize="@dimen/recurso_id"
            android:visibility="invisible" />
    </LinearLayout>


</LinearLayout>