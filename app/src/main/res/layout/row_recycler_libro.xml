<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textview_IdLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IdLibro"
                android:textColor="@color/recurso_id"
                android:textSize="@dimen/recurso_id"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textview_TituloLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TituloLibro"
                android:textColor="@color/recurso_id"
                android:textSize="@dimen/recurso_id"
                android:layout_margin="10dp"
                android:textStyle="italic"/>
            <Space
                android:layout_width="150dp"
                android:tooltipText="Imagen"
                android:layout_height= "45dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">
            <TextView
                android:id="@+id/textview_DescripcionLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripcionLibro"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion"

                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/textview_AutorLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AutorLibro"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion"
                android:textStyle="italic"
                android:layout_margin="2dp"
                android:gravity="bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                android:id="@+id/textview_IsbnLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IsbnLibro"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="15dp"
                    />
                <TextView
                android:id="@+id/textview_UbicacionLibro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UbicacionLibro"
                android:textColor="@color/recurso_descripcion"
                android:textSize="@dimen/recurso_descripcion"
                    android:layout_marginVertical="8dp"
                    android:layout_marginEnd="9dp"
               />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>